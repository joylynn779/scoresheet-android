<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:textAlignment="center">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.16" android:textAlignment="center">
        <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Home Goal"
                android:id="@+id/btnHomeGoal" android:layout_gravity="left|bottom" android:gravity="center"
                android:onClick="goalButtonClicked" android:nestedScrollingEnabled="false"/>
        <Button
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="Away Goal"
                android:id="@+id/btnAwayGoal" android:layout_gravity="right|bottom" android:onClick="goalButtonClicked"/>
        <TextView
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/txtAwayScore" android:layout_gravity="right|center_vertical" android:textColor="#ff132a"
                android:textAlignment="center" android:textStyle="bold" android:numeric="integer"
                android:singleLine="true" android:gravity="center"/>
        <TextView
                android:layout_width="106dp"
                android:layout_height="42dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/txtHomeScore" android:layout_gravity="center_vertical" android:textAlignment="center"
                android:typeface="sans" android:textColor="#ff132a" android:textStyle="bold"
                android:gravity="center"/>
        <TextView
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1"
                android:id="@+id/txtPeriod" android:layout_gravity="center" android:gravity="center"/>
        <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Home"
                android:id="@+id/textView" android:layout_gravity="left|top" android:gravity="center_vertical|center|center_horizontal"
                android:textStyle="italic"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Period"
                android:id="@+id/textView2" android:layout_gravity="center_horizontal|top" android:textStyle="italic"/>
        <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Away"
                android:id="@+id/textView3" android:layout_gravity="right|top" android:gravity="center"
                android:textStyle="italic"/>
    </FrameLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_weight="0.64" android:id="@+id/fragmentContainer">
    </LinearLayout>
</LinearLayout>

