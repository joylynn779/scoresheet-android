<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/helpLayout">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
                  android:background="@color/applight">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/helpTitle"
            android:id="@+id/textView8" android:layout_gravity="center_horizontal" style="@style/AppHeader"
            android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton" android:src="@drawable/ic_close_24dp" android:layout_marginTop="4dp"
                android:onClick="closeFragmentButtonClicked"/>

    </LinearLayout>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helpWebView"/>
</LinearLayout>