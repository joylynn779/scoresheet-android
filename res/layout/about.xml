<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:padding="20dip">

    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Version"
              android:id="@+id/txtAppVersion" android:layout_gravity="center_horizontal" android:layout_weight="0.07"
              android:paddingTop="20dip" android:textSize="20dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/aboutText"
            android:id="@+id/txtAbout" android:layout_gravity="center_horizontal" android:layout_weight="0.07"
            android:paddingTop="20dip" android:textSize="20dp"/>
</LinearLayout>